# ---- Core ----
NODE_ENV=development
BASE_URL=http://localhost:3000
PORT=3000
SESSION_SECRET=replace_with_32+_chars_secret

# ---- Admin / Auth ----
ADMIN_SECRET=replace_with_32+_chars_admin_secret

# ---- DB ----
DB_MODE=local
LOCAL_DB_PATH=.qaqanda/local-db.json
LOCAL_DB_LOCK_TIMEOUT_MS=10000
LOCAL_DB_STALE_LOCK_MS=60000

# ---- Databricks (only if DB_MODE=databricks) ----
DATABRICKS_HOST=
DATABRICKS_TOKEN=
DATABRICKS_WAREHOUSE_ID=
USE_DATABRICKS_MOCK=0

# ---- LLM ----
LLM_MODE=mock
MOCK_LLM_BAD=false

# OpenRouter (used when LLM_MODE=real)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_TEMPERATURE=0.2

# Used as HTTP-Referer header for OpenRouter requests
APP_URL=http://localhost:3000
